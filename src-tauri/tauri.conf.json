{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipboard-image-optimizer",
  "version": "0.1.0",
  "identifier": "com.clipboard-image-optimizer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clipboard Image Optimizer",
        "width": 800,
        "height": 600
      },
      {
        "label": "progress",
        "title": "Optimizing...",
        "url": "progress.html",
        "width": 240,
        "height": 80,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFDMEVCNzdEMjM4ODQ4ODYKUldTR1NJZ2pmYmNPSE9qb1ZrTHJqNXZ0MkFERVdocFdrdTF3RjhZeWVHa2Z6Z3dNczNhNmRtT2UK",
      "endpoints": [
        "https://github.com/Cekavis/clipboard-image-optimizer/releases/latest/download/latest.json"
      ]
    }
  }
}
